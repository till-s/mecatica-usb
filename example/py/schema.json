{
  "type"                 : "object",
  "required"             : [ "deviceDesc" ],
  "additionalProperties" : false,
  "properties"           : {
    "deviceDesc" : {
      "type"                  : "object",
      "required"              : [ "idProduct", "configurationDesc" ],
      "additionalProperties"  : false,
      "properties"            : {
        "idVendor" :  {
          "description" : "USB Vendor ID; defaults to 0x1209 (PID Codes)",
          "default" : 4617,
          "type"    : "integer",
          "minimum" : 1,
          "maximum" : 65535
        },
        "idProduct" :  {
          "description" : "USB Product ID; use one of the testing numbers for private use ONLY",
          "type"    : "integer",
          "minimum" : 1,
          "maximum" : 65535
        },
        "iProduct" : {
          "description" : "Product name",
          "type"    : "string"
        },
        "iSerialNumber" : {
          "default" : "",
          "type"    : "string"
        },
        "iManufacturer" : {
          "default" : "",
          "type"    : "string"
        },
        "speeds" : {
          "description" : "Speeds the device should support (via USB Device Qualifier Descriptor)",
          "default" : "dual",
          "type"    : "string",
          "enum"    : [ "full", "high", "dual" ]
        },
        "configurationDesc" : {
          "description" : "Container for everything in the (only) configuration",
          "type"                  : "object",
          "additionalProperties"  : false,
          "properties"            : {
            "remoteWakeup" : {
              "description" : "Support USB remote wakeup feature",
              "default" : true,
              "type"    : "boolean"
            },
            "iConfiguration" : {
              "description" : "Name (in configuration descriptor)",
              "default" : "",
              "type"    : "string"
            },
            "functionACM" : {
              "description" : "CDC ACM Function Support",
              "type"                  :"object",
              "additionalProperties"  : false,
              "properties"            : {
                "enabled"   : {
                  "description" : "Enable/disable the ACM Function",
                  "default" : true,
                  "type"    : "boolean"
                },
                "iFunction" : {
                  "description" : "Function Name",
                  "type"    : "string"
                },
                "iInterfaceCtrl" : {
                  "type"    : "string"
                },
                "iInterfaceData" : {
                  "type"    : "string"
                },
                "haveSendBreak" : {
                  "description" : "Support the 'Send Break' control request",
                  "default" : true,
                  "type"    : "boolean"
                },
                "haveLineState" : {
                  "description" : "Support the 'Line State' control request",
                  "default" : true,
                  "type"    : "boolean"
                },
                "maxPktSizeIN" : {
                  "description" : "Max. packet size on IN endpoint; setting to 0 picks a reasonable default based on speed",
                  "type"    : "integer",
                  "minimum" : 0,
                  "maximum" : 512
                },
                "maxPktSizeOUT" : {
                  "description" : "Max. packet size on OUT endpoint; setting to 0 picks a reasonable default based on speed",
                  "type"    : "integer",
                  "minimum" : 0,
                  "maximum" : 512
                }
              }
            },
            "functionECM" : {
              "description" : "CDC ECM Networking Function Support",
              "type"                  :"object",
              "required"              : [ "iMACAddress" ],
              "additionalProperties"  : false,
              "properties"            : {
                "enabled"   : {
                  "description" : "Enable/disable the ECM Function",
                  "type"    : "boolean"
                },
                "iFunction" : {
                  "description" : "Function Name",
                  "type"    : "string"
                },
                "iInterfaceCtrl" : {
                  "type"    : "string"
                },
                "iInterfaceData" : {
                  "type"    : "string"
                },
                "iMACAddress" : {
                  "description" : "MAC Address (12 hex characters as string)",
                  "type"    : "string",
                  "pattern" : "^[0-9a-fA-F]{12}$"
                },
                "maxPktSizeIN" : {
                  "description" : "Max. packet size on IN endpoint; setting to 0 picks a reasonable default based on speed",
                  "type"    : "integer",
                  "minimum" : 0,
                  "maximum" : 512
                },
                "maxPktSizeOUT" : {
                  "description" : "Max. packet size on OUT endpoint; setting to 0 picks a reasonable default based on speed",
                  "type"    : "integer",
                  "minimum" : 0,
                  "maximum" : 512
                }
              }
            },
            "functionNCM" : {
              "description" : "CDC NCM Networking Function Support",
              "type"                  :"object",
              "required"              : [ "iMACAddress" ],
              "additionalProperties"  : false,
              "properties"            : {
                "enabled"   : {
                  "description" : "Enable/disable the NCM Function",
                  "type"    : "boolean"
                },
                "iFunction" : {
                  "description" : "Function Name",
                  "type"    : "string"
                },
                "iInterfaceCtrl" : {
                  "type"    : "string"
                },
                "iInterfaceData" : {
                  "type"    : "string"
                },
                "iMACAddress" : {
                  "description" : "MAC Address (12 hex characters as string)",
                  "type"    : "string",
                  "pattern" : "^[0-9a-fA-F]{12}$"
                },
                "maxPktSizeIN" : {
                  "description" : "Max. packet size on IN endpoint; setting to 0 picks a reasonable default based on speed",
                  "type"    : "integer",
                  "minimum" : 0,
                  "maximum" : 512
                },
                "maxPktSizeOUT" : {
                  "description" : "Max. packet size on OUT endpoint; setting to 0 picks a reasonable default based on speed",
                  "type"    : "integer",
                  "minimum" : 0,
                  "maximum" : 512
                },
                "numMulticastFilters" : {
                  "description" : "Number of multicast filters to support (see NCM spec for special flag(s)!)",
                  "default" : 0,
                  "type"    : "integer",
                  "minimum" : 0,
                  "maximum" : 65535
                },
                "haveDynamicMACAddress" : {
                  "description" : "Support control-req. to change MAC Address (unsupported by linux :-()",
                  "default" : false,
                  "type"    : "boolean"
                }
              }
            },
            "functionUAC2Input" : {
              "description" : "UAC2 Audio Input Streaming Function",
              "type"                  :"object",
              "unevaluatedProperties" : false,
              "properties"            : {
                "enabled"   : {
                  "description" : "Enable/disable the UAC2 ISO Input Streaming Function",
                  "type"    : "boolean"
                },
                "iFunction" : {
                  "description" : "Function Name",
                  "type"    : "string"
                },
                "iInterfaceCtrl" : {
                  "type"    : "string"
                },
                "iInterfaceData" : {
                  "type"    : "string"
                },
                "numChannels" : {
                  "description" : "Number of audio channels (mono/stereo)",
                  "type"    : "integer",
                  "minimum" : 1,
                  "maximum" : 2
                },
                "numBits" : {
                  "description" : "Number of bits per audio sample per channel",
                  "type"    : "integer",
                  "minimum" : 1,
                  "maximum" : 32
                },
                "maxSamplingFrequency" : {
                  "description" : "Max. Frequency in Hz. required to calculate max. endpoint packet size",
                  "default" : 48000,
                  "type"    : "integer",
                  "minimum" : 1,
                  "maximum" : 100000
                },
                "iInputTerminal" : {
                  "description" : "Name(s) of input terminals; if there is more than one then a Selector Unit will be enabled",
                  "type"    : "array",
                  "items"   : {
                    "type" : "string"
                  },
                  "minItems" : 1,
                  "maxItems" : 255
                }
              },
              "if" : {
                "properties" : {
                  "iInputTerminal" : {
                    "minItems" : 2
                  }
                }
              },
              "then" : {
                "properties" : {
                  "iSelector" : {
                    "type" : "string"
                  }
                }
              }
            },
            "functionUAC2I2SOutput" : {
              "description" : "UAC2 Audio Output Streaming (to I2S) Function",
              "type"                  :"object",
              "additionalProperties"  : false,
              "properties"            : {
                "enabled"   : {
                  "description" : "Enable/disable the UAC2 ISO Output to I2S Streaming Function",
                  "type"    : "boolean"
                },
                "iFunction" : {
                  "description" : "Function Name",
                  "type"    : "string"
                },
                "iInterfaceCtrl" : {
                  "type"    : "string"
                },
                "iInterfaceData" : {
                  "type"    : "string"
                },
                "numChannels" : {
                  "description" : "Number of audio channels (mono/stereo)",
                  "type"    : "integer",
                  "minimum" : 1,
                  "maximum" : 2
                },
                "numBits" : {
                  "description" : "Number of bits per audio sample per channel",
                  "type"    : "integer",
                  "minimum" : 1,
                  "maximum" : 32
                },
                "maxSamplingFrequency" : {
                  "description" : "Max. Frequency in Hz. required to calculate max. endpoint packet size",
                  "default" : 48000,
                  "type"    : "integer",
                  "minimum" : 1,
                  "maximum" : 100000
                },
                "iOutputTerminal" : {
                  "description" : "Name of Output Terminal",
                  "type"    : "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
